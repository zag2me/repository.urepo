<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.urepo" name="uRepo Repository" version="1.0.2" provider-name="zag">
    <requires>
		<import addon="xbmc.addon" version="12.0.0"/>
	</requires>
	<extension point="xbmc.addon.repository" name="uRepo Repository">
        <info>https://www.urepo.org/zips/addons.xml</info>
        <checksum>https://www.urepo.org/zips/addons.xml.md5</checksum>
        <datadir zip="true">https://www.urepo.org/zips/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>uRepo.org Repository</summary>
        <description>uRepo.org is an independent repository designed to be as simple as possible to use by users and developers who wish to upload Add-ons to a 3rd party website. We generally follow the same rules as the official Kodi repository and encourage developers to submit to that as well.</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <language></language>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2</license>
        <forum></forum>
        <website>https://www.urepo.org</website>
        <source>https://github.com/zag2me/repository.urepo</source>
    </extension>
</addon>